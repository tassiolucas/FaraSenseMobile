<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_chart_outer"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_gravity="center"
            style="@style/ChartCardView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.shinelw.library.ColorArcProgressBar
                android:id="@+id/indicator"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                app:is_need_content="true"
                app:max_value="10"
                app:back_width="10dp"
                app:front_width="10dp"
                app:total_engle="270"
                app:is_need_unit="true"
                app:string_unit="Corrente (A)"
                app:back_color="@color/colorPrimaryDark"
                android:layout_marginBottom="150dp"
                app:front_color1="#00ff00"
                app:front_color2="#ffff00"
                app:front_color3="#ff0000"
                />

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>