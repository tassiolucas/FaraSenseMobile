<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/consumption_cost_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            style="@style/ChartCardView">

            <TextView
                android:id="@+id/label_cost_comsumption"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:fontFamily="sans-serif"
                android:textSize="36dp"
                android:layout_gravity="top"
                android:textColor="@color/colorLabelCost"
                android:gravity="center"
                android:text="R$ 35,90"/>

            <LinearLayout
                android:id="@+id/consumption_appbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:background="@drawable/shape_background_tab"
                android:layout_below="@id/include_toolbar">

                <TextView
                    android:id="@+id/label_start_period_comsumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="25/05"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/label_ao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/btn_double_padding"
                    android:layout_marginEnd="@dimen/btn_double_padding"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="ao"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/label_end_period_comsumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center"
                    android:text="25/05"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/cost_button_option"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_option"
                android:layout_gravity="end | bottom"
                android:layout_marginEnd="@dimen/element_margin"
                android:layout_marginBottom="@dimen/element_half_margin_and_more"/>

        </android.support.v7.widget.CardView>



    </RelativeLayout>
</layout>